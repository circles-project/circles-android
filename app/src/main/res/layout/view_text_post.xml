<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/default_background"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <org.futo.circles.view.PostHeaderView
            android:id="@+id/postHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />


        <org.futo.circles.view.ReadMoreTextView
            android:id="@+id/tvTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/grey_cool_1100"
            android:textSize="15sp"
            app:readMoreMaxLines="5"
            app:readMoreText="@string/see_more"
            app:readMoreTextColor="@color/primary"
            tools:text="Just finished my morning run! Feeling energized and ready to tackle the day. Wish me Just finished my morning run! Feeling energized and ready to tackle the day. Wish meJust finished my morning run! Feeling energized and ready to tackle the day. Just finished my morning run!" />


        <org.futo.circles.view.PostFooterView
            android:id="@+id/postFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="6dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>