<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_time_line_nav_graph"
    app:startDestination="@id/groupTimelineFragment">


    <fragment
        android:id="@+id/groupTimelineFragment"
        android:name="com.futo.circles.feature.group_timeline.GroupTimelineFragment"
        tools:layout="@layout/timeline_fragment">

        <argument
            android:name="roomId"
            app:argType="string"
            app:nullable="false" />

        <action
            android:id="@+id/to_inviteMembersDialogFragment"
            app:destination="@id/inviteMembersDialogFragment">

            <argument
                android:name="roomId"
                app:argType="string"
                app:nullable="false" />

        </action>
        <action
            android:id="@+id/to_manageMembersDialogFragment"
            app:destination="@id/manageMembersDialogFragment">

            <argument
                android:name="roomId"
                app:argType="string"
                app:nullable="false" />

        </action>
        <action
            android:id="@+id/to_updateRoomDialogFragment"
            app:destination="@id/updateRoomDialogFragment">

            <argument
                android:name="roomId"
                app:argType="string"
                app:nullable="false" />

            <argument
                android:name="type"
                android:defaultValue="Group"
                app:argType="com.futo.circles.model.CircleRoomTypeArg"
                app:nullable="false" />

        </action>
        <action
            android:id="@+id/to_createPostBottomSheet"
            app:destination="@id/createPostBottomSheet">

            <argument
                android:name="roomId"
                app:argType="string"
                app:nullable="false" />

            <argument
                android:name="userName"
                app:argType="string"
                app:nullable="true" />

            <argument
                android:name="eventId"
                app:argType="string"
                app:nullable="true" />

        </action>
        <action
            android:id="@+id/to_reportDialogFragment"
            app:destination="@id/reportDialogFragment">

            <argument
                android:name="roomId"
                app:argType="string"
                app:nullable="false" />

            <argument
                android:name="eventId"
                app:argType="string"
                app:nullable="false" />

        </action>
        <action
            android:id="@+id/to_emojiBottomSheet"
            app:destination="@id/emojiBottomSheet">

            <argument
                android:name="roomId"
                app:argType="string"
                app:nullable="false" />

            <argument
                android:name="eventId"
                app:argType="string"
                app:nullable="false" />

        </action>

    </fragment>

    <dialog
        android:id="@+id/inviteMembersDialogFragment"
        android:name="com.futo.circles.feature.group_invite.InviteMembersDialogFragment"
        tools:layout="@layout/invite_members_dialog_fragment">

        <argument
            android:name="roomId"
            app:argType="string"
            app:nullable="false" />

    </dialog>

    <dialog
        android:id="@+id/manageMembersDialogFragment"
        android:name="com.futo.circles.feature.group_members.ManageGroupMembersDialogFragment"
        tools:layout="@layout/manage_group_members_dialog_fragment">

        <argument
            android:name="roomId"
            app:argType="string"
            app:nullable="false" />

        <action
            android:id="@+id/to_changeAccessLevelBottomSheet"
            app:destination="@id/changeAccessLevelBottomSheet">

            <argument
                android:name="userId"
                app:argType="string"
                app:nullable="false" />

            <argument
                android:name="myUserLevelValue"
                app:argType="integer"
                app:nullable="false" />

            <argument
                android:name="levelValue"
                app:argType="integer"
                app:nullable="false" />

        </action>

    </dialog>
    <dialog
        android:id="@+id/changeAccessLevelBottomSheet"
        android:name="com.futo.circles.feature.group_members.change_role.ChangeAccessLevelBottomSheet"
        android:label="ChangeAccessLevelBottomSheet"
        tools:layout="@layout/change_access_level_bottom_sheet">

        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="myUserLevelValue"
            app:argType="integer"
            app:nullable="false" />

        <argument
            android:name="levelValue"
            app:argType="integer"
            app:nullable="false" />

    </dialog>
    <dialog
        android:id="@+id/updateRoomDialogFragment"
        android:name="com.futo.circles.feature.update_room.UpdateRoomDialogFragment"
        android:label="UpdateRoomDialogFragment"
        tools:layout="@layout/update_room_dialog_fragment">

        <argument
            android:name="roomId"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="type"
            app:argType="com.futo.circles.model.CircleRoomTypeArg"
            app:nullable="false" />


    </dialog>
    <dialog
        android:id="@+id/createPostBottomSheet"
        android:name="com.futo.circles.feature.post.CreatePostBottomSheet"
        android:label="CreatePostBottomSheet"
        tools:layout="@layout/create_post_bottom_sheet">

        <argument
            android:name="roomId"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="userName"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="eventId"
            app:argType="string"
            app:nullable="true" />

    </dialog>
    <dialog
        android:id="@+id/reportDialogFragment"
        android:name="com.futo.circles.feature.report.ReportDialogFragment"
        android:label="ReportDialogFragment"
        tools:layout="@layout/report_dialog_fragment">

        <argument
            android:name="roomId"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="eventId"
            app:argType="string"
            app:nullable="false" />

    </dialog>
    <dialog
        android:id="@+id/emojiBottomSheet"
        android:name="com.futo.circles.feature.emoji.EmojiBottomSheet"
        android:label="EmojiBottomSheet"
        tools:layout="@layout/emoji_bottom_sheet">

        <argument
            android:name="roomId"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="eventId"
            app:argType="string"
            app:nullable="false" />

    </dialog>
</navigation>