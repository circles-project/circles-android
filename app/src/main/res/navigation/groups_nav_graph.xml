<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groups_nav_graph"
    app:startDestination="@id/groupsFragment">

    <fragment
        android:id="@+id/groupsFragment"
        android:name="com.futo.circles.feature.groups.GroupsFragment"
        android:label="@string/my_groups"
        tools:layout="@layout/groups_fragment">

        <action
            android:id="@+id/to_group_time_line_nav_graph"
            app:destination="@id/group_time_line_nav_graph">

            <argument
                android:name="roomId"
                app:argType="string"
                app:nullable="false" />

        </action>

        <action
            android:id="@+id/to_createGroupDialogFragment"
            app:destination="@id/createGroupDialogFragment" />

    </fragment>

    <include app:graph="@navigation/group_time_line_nav_graph" />

    <dialog
        android:id="@+id/createGroupDialogFragment"
        android:name="com.futo.circles.feature.create_group.CreateGroupDialogFragment"
        tools:layout="@layout/create_group_dialog_fragment" />

</navigation>