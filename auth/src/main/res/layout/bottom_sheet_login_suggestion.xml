<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_post_menu_screen"
    android:orientation="vertical">

    <View
        android:layout_width="77dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_top_menu_indicator" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"
        tools:text="Did you mean userId?" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/grey_cool_300" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOk"
        style="@style/AccentButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        tools:text="Login as useirId" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        style="@style/NegativeButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:text="@string/no_let_me_try_again" />

</LinearLayout>